			 ft_itoa.c\
			 ft_memchr.c\
			 ft_memcmp.c\
			 ft_memcpy.c\
			 ft_memmove.c\
			 ft_memset.c\
			 ft_putchar_fd.c\
			 ft_putendl_fd.c\
			 ft_putnbr_fd.c\
			 ft_putstr_fd.c\
			 ft_split.c\
			 ft_strchr.c\
			 ft_strdup.c\
