# 			 ft_lstmap.c\
			 

OBJECTS = $(MY_SOURCES:.c=.o)

# BONUS_OBJECTS = $(BONUS_SRCS:.c=.o)

HEADER = ../headers

COMPILER = cc

CFLAGS = -Wall -Wextra -Werror -I$(HEADER)

RM = rm -f

LIBC = ar rcs

all: $(NAME)

$(NAME): $(OBJECTS)
	$(LIBC) $(NAME) $(OBJECTS)

bonus: $(OBJECTS)
	$(LIBC) $(NAME) 

%.o: %.c
	$(COMPILER) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJECTS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean bonus re
